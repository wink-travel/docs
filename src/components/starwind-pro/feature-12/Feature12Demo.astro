---
import IconAi from "@tabler/icons/outline/ai.svg";
import IconAffiliate from "@tabler/icons/outline/affiliate.svg";
import IconRocket from "@tabler/icons/outline/rocket.svg";

import Feature12, { type FeatureTab } from "./Feature12.astro";

const tabs: FeatureTab[] = [
  {
    id: "automate",
    label: "Automate",
    icon: IconAi,
    title: "Supercharge your teams",
    description:
      "Unlock the full potential of your hotel's social media presence with Wink's suite of AI-powered tools and influencer agency. From managing guest interactions to boosting your content reach, our solutions are designed to streamline your marketing efforts and drive more direct bookings. Explore how each feature can transform your hotel's online engagement and sales strategy.",
    features: [
      "Creates engaging content based on sentiment analysis",
      "Our creative voice matches your brand",
      "Auto-publish to Facebook and Instagram",
      "Replies to comments and DMs",
      "Keep the conversation going on your site",
      "Work with creators with proven track records",
    ],
    image: {
      src: "https://res.cloudinary.com/traveliko/image/upload/w_492,h_480/v1767492228/my-account/social.png",
      alt: "Automate",
    },
  },
  {
    id: "affiliate",
    label: "Affiliate",
    icon: IconAffiliate,
    title: "Affiliate network",
    description:
      "The only affiliate network with direct access to hotels and 6 month attribution. Browse properties and inventory from all over the world and establish direct relationships with your favorite properties. Hotels that connect with Google through Wink get their official site badge on Google Maps and travelers can book through Google Hotels.",
    features: [
      "Negotiate your own commissions and deals",
      "Advanced tools for you to sell everywhere",
      "Connect to Traveliko OTA for a 0% commission option",
      "Retain ownership of your customers and your rates",
    ],
    image: {
      src: "https://res.cloudinary.com/traveliko/image/upload/w_492,h_400/v1767837879/my-account/network.png",
      alt: "Browse for inventory",
    },
  },
  {
    id: "accelerate",
    label: "Accelerate",
    icon: IconRocket,
    title: "Native booking engine",
    description:
      "Whether you're a hotel looking to boost direct bookings or a travel influencer wanting to monetize your audience, our user-friendly booking engine integrates seamlessly with your social media platforms, letting you showcase real-time availability and exclusive offers so your followers can book directly with ease. Experience the power of direct reservations with our fully customizable solution.",
    features: [
      "Intuitive, mobile-optimized interface with real-time availability",
      "Affiliates can use it as their own online travel agency",
      "Hotels can use it as their in-house booking engine",
      "It supports 44 languages and 100+ currencies",
      "Zero upfront cost while you maximize revenue potential",
    ],
    image: {
      src: "https://res.cloudinary.com/traveliko/image/upload/w_492,h_479/v1767756702/my-account/book-engine.png",
      alt: "Booking engine",
    },
  },
];
---

<Feature12
  tagline="Establish Your Game"
  heading="A travel platform built just for you... and all your friends"
  tabs={tabs}
/>
