---
import IconBrain from "@tabler/icons/outline/brain.svg";
import IconChartLine from "@tabler/icons/outline/chart-line.svg";
import IconCode from "@tabler/icons/outline/code.svg";
import IconShieldCheck from "@tabler/icons/outline/shield-check.svg";

import Feature15, { type BentoFeature } from "./Feature15.astro";

// Keep the ordering of cards: large, small, small, large, small, small
const features: BentoFeature[] = [
  {
    type: "large",
    badge: "AI Powered",
    title: "Intelligent Automation",
    description:
      "Leverage AI to create and publish a consistent marketing message across all your social networks while staying true to your meticulously constructed brand.",
    image: {
      src: "https://images.unsplash.com/photo-1677442136019-21780ecad995?w=800&h=600&fit=crop",
      alt: "AI automation",
    },
  },
  {
    type: "small",
    icon: IconCode,
    title: "AI Concierge",
    description: "Let users continue the conversation on your website.",
  },
  {
    type: "small",
    icon: IconShieldCheck,
    title: "Agency",
    description: "Ask us to send you curated affiliates. You can track their performance.",
  },
  {
    type: "large",
    badge: "Analytics",
    title: "Real-time Insights",
    description:
      "Track every metric that matters with our comprehensive analytics dashboard. Visualize trends, monitor performance, and make data-driven decisions with confidence.",
    image: {
      src: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=600&fit=crop",
      alt: "Analytics dashboard",
    },
  },
  {
    type: "small",
    icon: IconChartLine,
    title: "Ad Boost",
    description: "Amplify your message across all supported social platforms.",
  },
  {
    type: "small",
    icon: IconBrain,
    title: "Automated Replies and DMs",
    description: "Let us handle social inquires and guide travelers to book.",
  },
];
---

<Feature15
  tagline="Automation"
  heading="Supercharge your teams"
  description="An always-on marketing engine built for hotels just like yours."
  features={features}
/>
