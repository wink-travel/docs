---
import IconBolt from "@tabler/icons/outline/bolt.svg";
import IconCloud from "@tabler/icons/outline/cloud.svg";
import IconAi from "@tabler/icons/outline/settings-ai.svg";
import IconUsers from "@tabler/icons/outline/users.svg";

import Feature4, { type FeatureCard } from "./Feature4.astro";

const features: FeatureCard[] = [
  {
    icon: IconBolt,
    title: "Booking Engine",
    description:
      "Optimized for speed and performance. Experience blazing fast load times and smooth interactions.",
  },
  {
    icon: IconCloud,
    title: "Link Manager",
    description: "Share your links & deals anywhere, anytime. Advanced customization options at no cost.",
  },
  {
    icon: IconAi,
    title: "Automation",
    description: "Outsource your social media presence for a consistent marketing message on all channels.",
  },
  {
    icon: IconUsers,
    title: "Affiliate Network",
    description: "A network with direct access to hotels and 6 month attribution. Find deals from all over the world.",
  },
];
---

<Feature4 heading="Features" subheading="Everything you need in one platform" features={features} />
