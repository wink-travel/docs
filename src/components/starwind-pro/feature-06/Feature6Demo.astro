---
import IconBolt from "@tabler/icons/outline/bolt.svg";
import IconChartBar from "@tabler/icons/outline/chart-bar.svg";
import IconCode from "@tabler/icons/outline/code.svg";
import IconPalette from "@tabler/icons/outline/palette.svg";
import IconRocket from "@tabler/icons/outline/rocket.svg";
import IconShield from "@tabler/icons/outline/shield.svg";

import Feature6, { type FeatureCard } from "./Feature6.astro";

const features: FeatureCard[] = [
  {
    icon: IconRocket,
    title: "Fast Setup",
    description: "Get started in minutes with our intuitive onboarding process.",
  },
  {
    icon: IconBolt,
    title: "Powerful API",
    description: "Integrate seamlessly with our robust and well-documented API.",
  },
  {
    icon: IconShield,
    title: "Secure",
    description: "Bank-level security to keep your data protected at all times.",
  },
  {
    icon: IconChartBar,
    title: "Analytics",
    description: "Gain insights with comprehensive analytics and reporting tools.",
  },
  {
    icon: IconCode,
    title: "Developer Friendly",
    description: "Built with developers in mind, featuring modern tech stack.",
  },
  {
    icon: IconPalette,
    title: "Customizable",
    description: "Tailor the platform to match your brand and workflow.",
  },
];
---

<Feature6
  title="Built for the future"
  description="API-driven features designed from the ground up to help you work smarter, not harder. Everything you need to succeed in one place."
  features={features}
/>
