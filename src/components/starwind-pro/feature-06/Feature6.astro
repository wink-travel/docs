---
import IconBolt from "@tabler/icons/outline/bolt.svg";
import IconChartBar from "@tabler/icons/outline/chart-bar.svg";
import IconCode from "@tabler/icons/outline/code.svg";
import IconPalette from "@tabler/icons/outline/palette.svg";
import IconRocket from "@tabler/icons/outline/rocket.svg";
import IconShield from "@tabler/icons/outline/shield.svg";
import type { HTMLAttributes } from "astro/types";
import { tv } from "tailwind-variants";

export interface FeatureCard {
  icon: any;
  title: string;
  description: string;
}

interface Props extends HTMLAttributes<"section"> {
  /** Section title */
  title?: string;
  /** Section description */
  description?: string;
  /** Array of feature cards */
  features?: FeatureCard[];
}

const feature6Styles = tv({
  base: "@container mx-auto w-full max-w-7xl px-4 py-24",
});

const {
  title = "Built for modern teams",
  description = "Powerful features designed to help you work smarter, not harder. Everything you need to succeed in one place.",
  features = [
    {
      icon: IconRocket,
      title: "Fast Setup",
      description: "Get started in minutes with our intuitive onboarding process.",
    },
    {
      icon: IconBolt,
      title: "Powerful API",
      description: "Integrate seamlessly with our robust and well-documented API.",
    },
    {
      icon: IconShield,
      title: "Secure",
      description: "Bank-level security to keep your data protected at all times.",
    },
    {
      icon: IconChartBar,
      title: "Analytics",
      description: "Gain insights with comprehensive analytics and reporting tools.",
    },
    {
      icon: IconCode,
      title: "Developer Friendly",
      description: "Built with developers in mind, featuring modern tech stack.",
    },
    {
      icon: IconPalette,
      title: "Customizable",
      description: "Tailor the platform to match your brand and workflow.",
    },
  ],
  class: className,
  ...rest
} = Astro.props;
---

<section class={feature6Styles({ class: className })} {...rest}>
  <div class="mb-12 text-center">
    <h2 class="font-heading mb-4 text-3xl font-semibold tracking-tight @xl:text-4xl @3xl:text-5xl">
      {title}
    </h2>
    <p class="text-muted-foreground mx-auto max-w-2xl text-pretty @lg:text-lg">
      {description}
    </p>
  </div>

  <div class="grid gap-12 @lg:grid-cols-2 @3xl:grid-cols-3 @3xl:gap-16">
    {
      features.map((feature) => (
        <div class="text-center">
          <div class="bg-primary-accent/10 mx-auto mb-4 inline-flex rounded-2xl p-4">
            <feature.icon class="text-primary-accent size-8" aria-hidden="true" />
          </div>
          <h3 class="font-heading mb-2 text-lg font-semibold">{feature.title}</h3>
          <p class="text-muted-foreground mx-auto max-w-[300px] text-sm text-pretty">
            {feature.description}
          </p>
        </div>
      ))
    }
  </div>
</section>
