import IconZap from "@tabler/icons/outline/bolt.svg";
import IconRocket from "@tabler/icons/outline/rocket.svg";
import IconShield from "@tabler/icons/outline/shield-check.svg";

import Feature11, { type FeatureCard } from "./Feature11.astro";

const features: FeatureCard[] = [
  {
    icon: IconRocket,
    title: "Origin Story",
    description:
      "Wink was born from a simple, powerful idea: empower hotels to reclaim control. As seasoned hoteliers, we witnessed OTAs dominating revenue and bookings, so we created a platform that puts marketing, direct reservations, and customer relationships back in hotels' hands—letting them drive their own success.",
    badge: "Ownership",
  },
  {
    icon: IconShield,
    title: "Mission",
    description: "Our mission is to level the playing field, equipping hotels of all sizes with cutting-edge tools to thrive online. We empower hoteliers to reduce OTA dependency, boost direct bookings, strengthen authentic branding, and unlock greater profitability—driving fresh innovation throughout the hospitality industry.",
    badge: "Direct",
  },
  {
    icon: IconZap,
    title: "Core Values",
    description:
      "Empowerment, Innovation, and Partnership. We empower hotels to take full control of their destiny, fuel innovation with cutting-edge technology, and build lasting success through true partnerships. Together, these values create a powerful recipe for meaningful, sustainable growth in hospitality.",
    badge: "Growth",
  },
];
---

<Feature11 tagline="Why Choose Us" heading="Company Values" features={features} />
